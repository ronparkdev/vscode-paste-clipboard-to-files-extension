{
  "name": "paste-clipboard-to-files",
  "displayName": "Paste Clipboard to Files",
  "description": "Create files from clipboard content with path comments",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "paste-clipboard-to-files.pasteAsFiles",
        "title": "Paste Clipboard Content as Files"
      }
    ],
    "keybindings": [
      {
        "command": "paste-clipboard-to-files.pasteAsFiles",
        "key": "ctrl+alt+shift+v",
        "mac": "cmd+alt+shift+v",
        "when": "editorTextFocus || filesExplorerFocus"
      }
    ],
    "configuration": {
      "title": "Paste Clipboard to Files",
      "properties": {
        "pasteClipboardToFiles.extensionlessFiles": {
          "type": "array",
          "default": [
            "dockerfile",
            "makefile",
            "jenkinsfile",
            "vagrantfile",
            "brewfile",
            "gemfile",
            "procfile",
            "dockerignore",
            "gitignore",
            "env",
            "bashrc",
            "zshrc",
            "vimrc",
            "tmux.conf"
          ],
          "items": {
            "type": "string"
          },
          "description": "List of known files without extensions that should be recognized as valid file paths"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}
